@model Cvjećarnica_Zvončica.Models.ProizvodKategorija

@{
    ViewData["Title"] = "Kreiraj Kategoriju Za Produkt";
}

<h1>Kreiraj Kategoriju Za Produkt</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Kreiraj">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProizvodId" value="@ViewBag.ProizvodId">
            <div class="form-group">
                <label asp-for="KategorijaId" class="control-label"></label>
                <select asp-for="KategorijaId" class="form-control" asp-items="ViewBag.Kategorije"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Uredi" asp-controller="Proizvod" asp-route-Id="@ViewBag.PrizvodId" class="btn btn-primary">Natrag na Uređivanje Proizvoda</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
