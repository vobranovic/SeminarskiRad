@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>
@{
    ViewData["Title"] = "Upravljanje Rolama";
}

<h1>Upravljanje Rolama</h1>

<a asp-action="Kreiraj" class="btn btn-primary mb-5">Krairaj Novu Rolu</a>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Rola</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>             
                <td><a asp-action="Brisi" class="btn btn-danger" asp-route-id="@item.Id">Briši</a></td>
            </tr>
        }
    </tbody>
</table>
