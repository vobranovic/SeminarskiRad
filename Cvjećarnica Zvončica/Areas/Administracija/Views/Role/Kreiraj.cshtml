@using Microsoft.AspNetCore.Identity
@model IdentityRole
@{
    ViewData["Title"] = "Kreiraj Rolu";
}

<h1>Kreiraj Novu Rolu</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Kreiraj">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index" class="btn btn-primary">Natrag na popis rola</a>
</div>

@if (ViewBag.Greska != null)
{
    <p class="text-danger">@ViewBag.Greska</p>
}

