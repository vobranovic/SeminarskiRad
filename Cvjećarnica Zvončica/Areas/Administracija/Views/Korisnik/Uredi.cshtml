@model Cvjećarnica_Zvončica.Models.ApplicationUser
@{
    ViewData["Title"] = "Uredi Korisnika";
}

<h1>Uredi Korisnika</h1>

<hr />

<a asp-action="Index" class="btn btn-primary">Natrag Na Popis Korisnika</a>

<form asp-action="Uredi" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Ime" class="control-label"></label>
        <input asp-for="Ime" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Prezime" class="control-label"></label>
        <input asp-for="Prezime" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adresa" class="control-label"></label>
        <input asp-for="Adresa" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rola"></label>
        <select asp-for="Rola" class="form-control" asp-items="@ViewBag.Role" ></select>
    </div>
    <div class="form-group">
        <label for="password" class="control-label">Password</label>
        <input name="password" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Spremi</button>
</form>


