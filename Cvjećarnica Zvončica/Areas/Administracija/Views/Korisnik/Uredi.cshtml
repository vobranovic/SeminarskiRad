@model Cvjećarnica_Zvončica.Models.ApplicationUser
@{
    ViewData["Title"] = "Uredi";
}

<h1>Uredi korisnika</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Uredi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PhoneNumberConfirmed" value="False" />
            <input type="hidden" asp-for="TwoFactorEnabled" value="False" />
            <input type="hidden" asp-for="LockoutEnabled" value="False" />
            <input type="hidden" asp-for="AccessFailedCount" value="0" />
            <input type="hidden" asp-for="EmailConfirmed" value="True" />

            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezime" class="control-label"></label>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresa" class="control-label"></label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <a asp-action="Index" class="btn btn-primary">Lista Korisnika</a>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <form asp-action="Brisi"></form>
        <input type="hidden" asp-route-id="@Model.Id" />
        <input type="submit" class="btn btn-danger" value="Obriši Korisnika" />
    </div>
</div>



@section Scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


