@model List<Cvjećarnica_Zvončica.Models.ApplicationUser>
@{
    ViewData["Title"] = "Korisnici";
}

<h1>Popis registriranih korisnika</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ime</th>
            <th>Prezime</th>
            <th>E-mail</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ime</td>
                <td>@item.Prezime</td>
                <td>@item.Email</td>
                <td><a asp-action="Uredi" asp-route-id="@item.Id" class="btn btn-primary mr-3">Uredi</a><a asp-action="Detalji" asp-route-id="@item.Id" class="btn btn-secondary">Detalji</a></td>
            </tr>
        }
    </tbody>
</table>

