@model KorisnikViewModel
@{
    ViewData["Title"] = "Kreiraj Novog Korisnika";
}

<h1>Kreiraj Novog Korisnika</h1>

<a asp-action="Index" class="btn btn-primary">Natrag Na Popis Korisnika</a>

<form method="post" asp-action="Kreiraj" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Ime"></label>
        <input asp-for="Ime" class="form-control" />        
    </div>
    <div class="form-group">
        <label asp-for="Prezime"></label>
        <input asp-for="Prezime" class="form-control" />        
    </div>
    <div class="form-group">
        <label asp-for="Adresa"></label>
        <input asp-for="Adresa" class="form-control" />        
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RepeatedPassword"></label>
        <input asp-for="RepeatedPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Kreiraj" />
    </div>
</form>