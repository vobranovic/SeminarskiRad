@model Cvijet
@{
    ViewData["Title"] = "Dodavanje novog cvijeta u bazu";
}

<h1>Dodavanje novog cvijeta u bazu</h1>

<div class="row">
    <div class="col-md-5">
        <form asp-action="DodajNoviCvijetUBazu">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                @{
                    var baza = (List<Cvijet>)ViewBag.BazaCvijeca;
                    var cvijetId = baza.Count + 1;
                }
                <input asp-for="CvijetId" value="@cvijetId" hidden="hidden" />
            </div>


            <div class="form-group">
                <label asp-for="Naziv"></label>
                <select asp-for="Naziv" asp-items="Html.GetEnumSelectList<Naziv>()">
                    <option selected="selected" value="">Odaberite naziv cvijeta</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Boja"></label>
                <select asp-for="Boja" asp-items="Html.GetEnumSelectList<Boja>()">
                    <option selected="selected" value="">Odaberite boju</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Cijena"></label>
                <input asp-for="Cijena" />
            </div>

            <div class="form-group">
                <label asp-for="Zaprimljeno"></label>
                <input asp-for="Zaprimljeno" />
            </div>

            <div class="form-group">
                <input type="submit" class="btn-primary" value="Dodaj u bazu" />
            </div>

        </form>
    </div>
</div>

<a asp-action="PopisDostupnogCvijeca">Popis Dostupnog Cvijeća</a>


@if (ViewData["Error"] != null)
{
    <h5 class="text-danger">@ViewData["Error"]</h5>
}
else if (ViewData["Success"] != null)
{
    <h5 class="text-success">@ViewData["Success"]</h5>
}
else if (ViewBag.UnknownError != null)
{
    <h5 class="text-danger">@ViewBag.UnknownError</h5>
}



