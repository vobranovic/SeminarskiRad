@model Cvjećarnica_Zvončica.Models.Proizvod

@{
    ViewData["Title"] = "Detalji Proizvoda";
}

<h1>Detalji Proizvoda</h1>

<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kolicina)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kolicina)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cijena)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cijena)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Slika)
        </dt>
        <dd class = "col-sm-10">
             @if (Model.Slika != null)
                    {
                        <img style="width:150px;height:150px;" src="data:image/*;base64,@Convert.ToBase64String(Model.Slika)" />
                    }
                    else
                    {
                        <span>Nema dostupne slike za ovaj proizvod.</span>                        
                    }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Povratak Na Proizvode</a>
</div>
